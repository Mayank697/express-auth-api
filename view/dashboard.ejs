<%- include('index.ejs', {title: title, username: data.username}) %>
    <div class="container">
        <div class="row">
            <h1>Records</h1>
            <table id="recordList" class="table table-striped">
                <thead class="table-success">
                    <tr>
                        <th scope="col">Sno</th>
                        <th scope="col">Plant Name</th>
                        <th scope="col">Address</th>
                        <th scope="col">City</th>
                        <th scope="col">State</th>
                        <th scope="col" style="width:20%">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% var sno=1 %>
                        <%if (records.length> 0) { %>
                            <% records.forEach(function(row) { %>
                                <tr>
                                    <th scope="row">
                                        <%= sno++ %>
                                    </th>
                                    <td>
                                        <%= row.name %>
                                    </td>
                                    <td>
                                        <%= row.address %>
                                    </td>
                                    <td>
                                        <%= row.city %>
                                    </td>
                                    <td>
                                        <%= row.state %>
                                    </td>
                                    <td>
                                        <a href="/delete" class="btn btn-outline-danger btn-sm">Delete</a>
                                        <a href="/update" class="btn btn-outline-primary btn-sm">Update</a>
                                    </td>
                                </tr>
                                <% })} else{ %>
                                    <tr>
                                        <td colspan="6">
                                            No Record Found
                                        </td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>

    </div>




    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#recordList').DataTable();
        });
    </script>
    </body>

    </html>