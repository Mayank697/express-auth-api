extends layout


block content 
    .signup-form
      form(action='/' method='post')
        h2 Sign up
        p.hint-text Create your account. It's free and only takes a minute.
        .form-group
          .row
            .col
              input.form-control(type='text' name='first_name' placeholder='First Name' required='required')
            .col
              input.form-control(type='text' name='last_name' placeholder='Last Name' required='required')
        .form-group
          input.form-control(type='email' name='email' placeholder='Email' required='required')
        .form-group
          input.form-control(type='password' name='password' placeholder='Password' required='required')
        .form-group
          input.form-control(type='password' name='confirm_password' placeholder='Confirm Password' required='required')
        .form-group
          button.btn.btn-success.btn-lg.btn-block(type='submit') Register Now
      .text-center Already have an account? 
        a(href='#') Sign in
